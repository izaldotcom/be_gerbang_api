generator client {
  provider = "go run github.com/steebchen/prisma-client-go"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid()) 
  
  role_id       String?   
  role          Role?     @relation(fields: [role_id], references: [id])
  name          String
  email         String    @unique
  password      String
  phone         String?
  status        String?
  last_login    DateTime?
  
  created_at    DateTime  @default(now())
  created_by    String?
  updated_at    DateTime  @updatedAt
  updated_by    String?

  refreshTokens RefreshToken[]
  apiKeys       ApiKey[]

  @@map("user")
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("refresh_token")
}

model ApiKey {
  id          String   @id @default(uuid())
  
  userId      String   @map("user_id")
  user        User     @relation(fields: [userId], references: [id])

  isActive    Boolean  @default(true) @map("is_active")
  seller_name String?
  api_key     String   @unique
  secret      String
  status      Boolean  @default(true)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("api_key")
}

model Supplier {
  id           String            @id @default(uuid())
  name         String
  type         String
  base_url     String?
  status       Boolean           @default(true)
  created_at   DateTime          @default(now())
  updated_at   DateTime          @updatedAt
  
  products     InternalProduct[] @relation("SupplierProducts")

  @@map("supplier")
}

model InternalProduct {
  id            String   @id @default(uuid())
  supplier_id   String
  name          String
  denom         Int
  price         Int
  status        Boolean  @default(true)
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  Supplier      Supplier @relation("SupplierProducts", fields: [supplier_id], references: [id])

  @@map("internal_product")
}

model Role {
  id          String    @id @default(uuid()) @map("role_id")
  name        String    @map("role_name") @db.VarChar(100)
  description String?   @db.Text
  
  createdAt   DateTime  @default(now()) @map("created_at") @db.Timestamp(0)
  createdBy   String?   @map("created_by") @db.VarChar(255)
  updatedAt   DateTime? @updatedAt @map("updated_at") @db.Timestamp(0)
  updatedBy   String?   @map("updated_by") @db.VarChar(255)

  users           User[]
  rolePermissions RolePermission[]

  @@map("role")
}

model Permission {
  id            String    @id @map("permission_id") @db.Char(100)
  permissionKey String    @map("permission_key") @db.VarChar(100)
  description   String?   @db.Text
  
  createdAt     DateTime  @default(now()) @map("created_at") @db.Timestamp(0)
  createdBy     String?   @map("created_by") @db.VarChar(255)
  updatedAt     DateTime? @updatedAt @map("updated_at") @db.Timestamp(0)
  updatedBy     String?   @map("updated_by") @db.VarChar(255)

  rolePermissions RolePermission[]

  @@map("permission")
}

model RolePermission {
  id           String   @id @db.Char(100)
  roleId       String   @map("role_id") @db.Char(100)
  permissionId String   @map("permission_id") @db.Char(100)
  
  createdAt    DateTime @default(now()) @map("created_at") @db.Timestamp(0)
  createdBy    String?  @map("created_by") @db.VarChar(255)

  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@map("role_permission")
}