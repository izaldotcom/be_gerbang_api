generator client {
  provider = "go run github.com/steebchen/prisma-client-go"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid()) @db.Char(100)
  role_id    String   @db.Char(100)
  name       String   @db.VarChar(255)
  email      String   @unique @db.VarChar(255)
  password   String   @db.VarChar(255)
  phone      String   @db.VarChar(20)
  status     String   @db.VarChar(20)
  last_login DateTime? @db.DateTime
  created_at DateTime @default(now()) @db.Timestamp
  created_by String?  @db.Char(255)
  updated_at DateTime @updatedAt @db.Timestamp
  updated_by String?  @db.Char(255)

  @@map("user")
}

model ApiKey {
  id          String   @id @default(uuid()) @db.Char(36)
  seller_name String   @db.VarChar(255)
  api_key     String   @unique @db.VarChar(255)
  secret      String   @db.VarChar(255)
  status      Boolean  @default(true)
  created_at  DateTime @default(now()) @db.Timestamp
  updated_at  DateTime @updatedAt @db.Timestamp

  @@map("api_key")
}

model Supplier {
  id           String           @id @default(uuid()) @db.Char(36)
  name         String           @db.VarChar(255)
  type         String           @db.VarChar(50)
  base_url     String?          @db.VarChar(255)
  status       Boolean          @default(true)
  created_at   DateTime         @default(now()) @db.Timestamp
  updated_at   DateTime         @updatedAt @db.Timestamp
  products     InternalProduct[] @relation("SupplierProducts")

  @@map("supplier")
}

model InternalProduct {
  id            String   @id @default(uuid()) @db.Char(36)
  supplier_id   String   @db.Char(36)
  name          String   @db.VarChar(255)
  denom         Int
  price         Int
  status        Boolean  @default(true)
  created_at    DateTime @default(now()) @db.Timestamp
  updated_at    DateTime @updatedAt @db.Timestamp

  Supplier      Supplier @relation("SupplierProducts", fields: [supplier_id], references: [id])

  @@map("internal_product")
}


